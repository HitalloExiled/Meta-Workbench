{
    "version": "0.2.0",
    "configurations":
    [
        {
            "type":    "node",
            "request": "launch",
            "name":    "Launch Server",
            "program": "${workspaceRoot}\\App.Server\\start\\index.js",
            "cwd":     "${workspaceRoot}\\App.Server",
            "outFiles": []
        },
        {
            "type":          "node",
            "request":       "launch",
            "name":          "Launch Build",
            "program":       "${workspaceRoot}\\App.Build\\tasks\\build.js",
            "cwd":           "${workspaceRoot}\\App.Build",
            "outFiles": []
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:1337",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}